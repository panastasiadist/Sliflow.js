{
  "name": "sliflow",
  "version": "0.1.0",
  "author": "Panagiotis (Panos) Anastasiadis",
  "description": "Simple yet Capable Content Slider",
  "keywords": [
    "image slider",
    "content slider",
    "javascript es6 slider",
    "jquery-free slider",
    "dependency-free slider"
  ],
  "license": "MIT",
  "private": false,
  "type": "module",
  "main": "dist/sliflow.umd.cjs",
  "module": "dist/sliflow.js",
  "types": "dist/Sliflow.d.ts",
  "exports": {
    ".": {
      "import": "./dist/sliflow.js",
      "require": "./dist/sliflow.umd.cjs",
      "types": "./dist/Sliflow.d.ts"
    },
    "./styles": "./dist/sliflow.css"
  },
  "files": [
    "/dist/sliflow.css",
    "/dist/Sliflow.d.ts",
    "/dist/sliflow.js",
    "/dist/sliflow.umd.cjs"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "jest",
    "coverage": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/node": "^20.12.11",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "@vitejs/plugin-vue": "^5.0.4",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.5",
    "vite": "^5.2.11",
    "vitepress": "^1.1.4",
    "vue": "^3.4.27",
    "vue-tsc": "^2.0.17",
    "vite-plugin-dts": "^3.9.1"
  }
}
